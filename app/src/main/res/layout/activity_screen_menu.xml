<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/toolbar_child" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_roles"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_6dp"
        android:layout_marginTop="@dimen/margin_6dp"
        android:layout_marginRight="@dimen/margin_6dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_12dp"
                android:paddingRight="@dimen/margin_12dp"
                android:paddingBottom="@dimen/margin_30dp">

                <TextView
                    android:id="@+id/txt_profile_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/profile_setting"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp" />

                <TextView
                    android:id="@+id/txt_email_verification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/email_verifications"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp" />

                <TextView
                    android:id="@+id/txt_verification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/id_verfication"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp" />


                <TextView
                    android:id="@+id/txt_notificaiton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/notification_settings"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_payouts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/payouts"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp" />

                <TextView
                    android:id="@+id/txt_wallet_earning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/wallet_earning"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_bank_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/bank_details"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/share_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/regular"
                    android:text="@string/share"
                    android:background="@drawable/grey_divider"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/grey_divider"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/txt_rewards"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableTop="@drawable/ic_atm_24px"
                        android:focusable="true"
                        android:fontFamily="@font/regular"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_12dp"
                        android:paddingBottom="@dimen/margin_12dp"
                        android:text="@string/rewards"
                        android:visibility="gone"
                        android:textColor="@color/gray_d"
                        android:textSize="@dimen/text_size_15sp" />

                    <TextView
                        android:id="@+id/txt_offers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableTop="@drawable/ic_loyality_24px"
                        android:focusable="true"
                        android:fontFamily="@font/regular"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_12dp"
                        android:paddingBottom="@dimen/margin_12dp"
                        android:text="@string/offers"
                        android:textColor="@color/gray_d"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/txt_refer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableTop="@drawable/ic_share_24px"
                        android:focusable="true"
                        android:fontFamily="@font/regular"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:gravity="center"
                        android:paddingTop="@dimen/margin_12dp"
                        android:paddingBottom="@dimen/margin_12dp"
                        android:text="@string/refers"
                        android:textColor="@color/gray_d"
                        android:textSize="@dimen/text_size_15sp"
                        android:visibility="gone"/>


                </LinearLayout>


                <TextView
                    android:id="@+id/txt_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/help"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp" />


                <TextView
                    android:id="@+id/txt_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="@string/about"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp" />

                <TextView
                    android:id="@+id/txt_logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/grey_divider"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_arrow_forward"
                    android:fontFamily="@font/regular"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="left|center"
                    android:paddingTop="@dimen/margin_12dp"
                    android:paddingBottom="@dimen/margin_12dp"
                    android:text="Logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_17sp" />

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>