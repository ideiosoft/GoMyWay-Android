<!--                    app:ccp_textSize="@dimen/text_size_15sp" />-->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:fontFamily="@font/med"
                    android:gravity="center_vertical"
                    android:padding="@dimen/margin_4dp"
                    android:text="Enter your Mobile Number"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_from_wall_4dp"
                    android:layout_marginEnd="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+234"
                            android:textSize="17sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:fontFamily="@font/med"/>


                    <EditText
                        android:id="@+id/phone_no_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/square_stroke_edt_"
                        android:digits="1234567890"
                        android:hint="Enter Mobile Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="@dimen/small_padding"
                        android:textColor="@color/txt_clr"
                        android:textColorHint="@color/hint_text_clr"
                        android:textSize="@dimen/normal_text"
                        android:layout_marginStart="4dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/btn_send_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/margin_from_wall_32dp"
                    android:background="@drawable/solid_round_primary"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:gravity="center"
                    android:padding="@dimen/margin_from_wall_10dp"
                    android:text="   Send me a code   "
                    android:textColor="@color/white_regular"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>