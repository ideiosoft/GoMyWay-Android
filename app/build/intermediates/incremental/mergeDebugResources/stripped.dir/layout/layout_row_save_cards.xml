<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/padding_5sp"
    app:cardElevation="@dimen/margin_4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_4dp">

        <ImageView
            android:id="@+id/img_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/margin_from_wall_8dp"
            android:src="@drawable/delete_btn_24" />


        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_4dp"
            android:fontFamily="@font/med"
            android:gravity="center"
            android:text="@string/name_on_card"
            android:textColor="@color/color_black_opaque"
            android:textSize="@dimen/text_size_17sp" />

        <TextView
            android:id="@+id/txt_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_toLeftOf="@+id/img_del"
            android:layout_toRightOf="@+id/txt_name"
            android:fontFamily="@font/regular"
            android:gravity="left"
            android:text=""
            android:textColor="@color/color_1_gray"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/txt_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginTop="@dimen/margin_4dp"
            android:fontFamily="@font/med"
            android:gravity="center"
            android:text="@string/card_type"
            android:textColor="@color/color_black_opaque"
            android:textSize="@dimen/text_size_17sp" />

        <TextView
            android:id="@+id/txt_card_type_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_toRightOf="@+id/txt_card_type"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_1_gray"
            android:textSize="@dimen/text_size_15sp" />


        <TextView
            android:id="@+id/txt_card_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_card_type"
            android:layout_marginTop="@dimen/margin_4dp"
            android:fontFamily="@font/med"
            android:gravity="center"
            android:text="@string/card_number"
            android:textColor="@color/color_black_opaque"
            android:textSize="@dimen/text_size_17sp" />

        <TextView
            android:id="@+id/txt_card_no_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_card_type"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_toRightOf="@+id/txt_card_no"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_1_gray"
            android:textSize="@dimen/text_size_15sp" />


        <TextView
            android:id="@+id/txt_expire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_card_no"
            android:layout_marginTop="@dimen/margin_4dp"
            android:fontFamily="@font/med"
            android:gravity="center"
            android:text="@string/expires"
            android:textColor="@color/color_black_opaque"
            android:textSize="@dimen/text_size_17sp" />

        <TextView
            android:id="@+id/txt_expire_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_card_no"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_toRightOf="@+id/txt_expire"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_1_gray"
            android:textSize="@dimen/text_size_15sp" />


        <TextView
            android:id="@+id/txt_cvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_expire"
            android:layout_marginTop="@dimen/margin_4dp"
            android:fontFamily="@font/med"
            android:gravity="center"
            android:text="@string/cvv"
            android:textColor="@color/color_black_opaque"
            android:textSize="@dimen/text_size_17sp" />

        <TextView
            android:id="@+id/txt_cvv_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_expire"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_toRightOf="@+id/txt_cvv"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text=" ***"
            android:textColor="@color/color_1_gray"
            android:textSize="@dimen/text_size_15sp" />

        <TextView
            android:id="@+id/txt_bvn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cvv"
            android:layout_marginTop="@dimen/margin_4dp"
            android:fontFamily="@font/med"
            android:gravity="center"
            android:text="@string/bvn"
            android:visibility="gone"
            android:textColor="@color/color_black_opaque"
            android:textSize="@dimen/text_size_17sp" />

        <TextView
            android:id="@+id/txt_bvn_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cvv"
            android:layout_marginLeft="@dimen/margin_6dp"
            android:layout_marginTop="@dimen/margin_4dp"
            android:layout_toRightOf="@+id/txt_bvn"
            android:layout_centerVertical="true"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text=""
            android:visibility="gone"
            android:textColor="@color/color_1_gray"
            android:textSize="@dimen/text_size_15sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>