<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rel_root_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_from_wall_8dp"
    android:background="@color/white_regular"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/linear_reciver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/margin_from_wall_16dp"
        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
        android:layout_marginTop="@dimen/margin_from_wall_4dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="@dimen/margin_from_wall_4dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/margin_from_wall_4dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_baloon_gray"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/txt_msg_receiver_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="Pankaj Tripathi"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_13sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/msg_reciever"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="Receiver text message here"
                android:textColor="#000"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:gravity="right"
                android:text="12:47"
                android:textSize="9sp"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_reciver"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="@dimen/margin_from_wall_4dp"
        android:layout_marginEnd="@dimen/margin_from_wall_16dp"
        android:layout_marginRight="@dimen/margin_from_wall_16dp"
        android:layout_marginBottom="@dimen/margin_from_wall_4dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/margin_from_wall_4dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:id="@+id/mLinear_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_baloon_blue"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/msg_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_from_wall_2dp"
                android:gravity="center_vertical"
                android:text="Sender text message here"
                android:textColor="@color/color_white"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_15sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/sender_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="2dp"
                android:text="12:47"
                android:textSize="9sp"
                android:textStyle="italic" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


