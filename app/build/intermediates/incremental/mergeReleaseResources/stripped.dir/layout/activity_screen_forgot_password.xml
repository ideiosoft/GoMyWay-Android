<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.login.ScreenForgotPassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/register_lay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/login_bg">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/margin_from_wall_48"
                    android:src="@drawable/mlogo_white" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_from_wall_16dp"
                android:paddingRight="@dimen/margin_from_wall_16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_wall_8dp"
                    android:fontFamily="@font/med"
                    android:gravity="center"
                    android:padding="@dimen/small_padding"
                    android:text="Forgot your password?"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_17sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_wall_8dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:padding="@dimen/small_padding"
                    android:text="@string/forgot_text_"
                    android:textColor="@color/color_black_opaque"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_wall_32dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center_vertical"
                    android:padding="@dimen/small_padding"
                    android:text="Email Address"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/text_size_15sp" />

                <EditText
                    android:id="@+id/email_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_stroke_edt_"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/small_padding"
                    android:textColor="@color/txt_clr"
                    android:textColorHint="@color/hint_text_clr"
                    android:textSize="@dimen/normal_text" />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/register_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_from_wall_32dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_from_wall_16dp"
        android:paddingRight="@dimen/margin_from_wall_16dp"
        android:paddingBottom="@dimen/margin_from_wall_8dp">

        <TextView
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:layout_marginBottom="@dimen/margin_from_wall_8dp"
            android:background="@drawable/solid_round_primary"
            android:gravity="center"
            android:padding="@dimen/margin_from_wall_10dp"
            android:text="SEND RESET LINK"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:textColor="@color/white_regular"
            android:textSize="@dimen/text_size_15sp" />
    </LinearLayout>
</RelativeLayout>